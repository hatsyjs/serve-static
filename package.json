{
  "name": "@hatsy/serve-static",
  "version": "2.3.1",
  "description": "Hatsy request handler that serves static content",
  "keywords": [
    "http-middleware",
    "static-file-server",
    "static-resources"
  ],
  "homepage": "https://github.com/hatsyjs/serve-static",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:hatsyjs/serve-static.git"
  },
  "license": "MIT",
  "author": "Ruslan Lopatin <ruslan.lopatin@gmail.com>",
  "bugs": {
    "url": "https://github.com/hatsyjs/serve-static/issues"
  },
  "type": "module",
  "types": "./dist/serve-static.d.ts",
  "exports": {
    "types": "./dist/serve-static.d.ts",
    "default": "./dist/serve-static.js"
  },
  "dependencies": {
    "send": "^0.18.0"
  },
  "peerDependencies": {
    "@hatsy/hatsy": "^2.5.3",
    "@hatsy/router": "^2.3.1"
  },
  "devDependencies": {
    "@hatsy/hatsy": "^2.5.3",
    "@hatsy/route-match": "^1.4.1",
    "@hatsy/router": "^2.3.1",
    "@jest/globals": "^29.4.3",
    "@proc7ts/logger": "^1.3.2",
    "@run-z/eslint-config": "^3.3.1",
    "@run-z/prettier-config": "^2.0.0",
    "@run-z/project-config": "^0.15.1",
    "@swc/core": "^1.3.37",
    "@swc/jest": "^0.2.24",
    "@types/send": "^0.17.1",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "eslint-plugin-jest": "^27.2.1",
    "gh-pages": "^5.0.0",
    "jest": "^29.4.3",
    "jest-junit": "^15.0.0",
    "jest-mock": "^29.4.3",
    "prettier": "^2.8.4",
    "prettier-eslint-cli": "^7.1.0",
    "rollup": "^3.18.0",
    "run-z": "^1.11.0",
    "ts-jest": "^29.0.5",
    "tslib": "^2.5.0",
    "typedoc": "^0.23.26",
    "typescript": "~4.9.5"
  },
  "scripts": {
    "all": "run-z build,lint,test",
    "build": "run-z +z --then build-z",
    "ci:all": "run-z all +test/--ci/--runInBand",
    "clean": "run-z +z --then clean-z",
    "doc": "run-z +z --then typedoc",
    "doc:publish": "run-z doc --then gh-pages --dist target/typedoc --dotfiles",
    "format": "run-z +z --then prettier-eslint --write --include-dot-files \"src/**/*.*\" \"*.{js,cjs,json,md}\"",
    "lint": "run-z +z --then eslint .",
    "test": "run-z +z env:NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" --then test-z",
    "z": "run-z +cmd:build-z,+cmd:typedoc,+cmd:eslint,+cmd:test-z"
  }
}
