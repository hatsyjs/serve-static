{
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "ES2015",
    "target": "ES2018",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "importsNotUsedAsValues": "error",
    "noEmitHelpers": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "ES2018"
    ],
    "types": [
      "jest",
      "node"
    ],
    "outDir": "target/js",
    "sourceMap": true,
    "newLine": "LF"
  },
  "include": [
    "src/**/*"
  ]
}
